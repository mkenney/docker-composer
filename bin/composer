#!/usr/bin/env sh

TAG=php5
BRANCH=php5

if [ "self-update" = "$1" ]; then
    docker pull mkenney/composer:$TAG
    wget -nv -O $0 https://raw.githubusercontent.com/mkenney/docker-composer/$BRANCH/bin/composer
else
    docker run --rm -t -i -v $(pwd):/src:rw -v $HOME/.ssh:/home/dev/.ssh:ro mkenney/composer:$TAG $@
fi
